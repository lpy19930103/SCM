<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.lpy.scm.dao.SaleOrderMapper">

    <sql id="Base_Column_List">
        id,
        goods_total,
        customer_name,
        customer_phone,
        review_status,
        review_name,
        review_at,
        out_time,
        order_type,
        depot_name
    </sql>


    <update id="closeOrderTask">
        <!--<foreach collection="list" item="item" index="index"  separator=",">-->
        <!---->
        <!--</foreach>-->
        update sale_order
        <set>
            order_type=9
        </set>
        where order_type=1
        and create_at &lt; now()-interval 10 minute
    </update>

    <select id="queryOrder" parameterType="com.lpy.scm.param.QueryOrderParam"
            resultMap="com.lpy.scm.dataobject.SaleOrderDO">
        SELECT
        <include refid="Base_Column_List"/>
        FROM base_goods
        <choose>

            <when test="startTime != null and startTime != '' and endTime != null and endTime != ''">
                WHERE
                create_at between #{startTime} and #{endTime}
                <if test="keyWords!=null and keyWords!=''">
                    AND goods_name LIKE '%${keyWords}%'
                </if>
            </when>

            <otherwise>
                <if test="keyWords!=null and keyWords!=''">
                    WHERE goods_name LIKE '%${keyWords}%'
                </if>
            </otherwise>
        </choose>
    </select>
</mapper>